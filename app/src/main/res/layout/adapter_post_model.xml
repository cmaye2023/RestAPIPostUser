<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/userNameCard"
    android:elevation="10dp"
    android:outlineSpotShadowColor="@color/red">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:background="@color/white_gray">


        <View
            android:id="@+id/viewVertical1"
            android:layout_width="0.01dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.2"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:src="@mipmap/user_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/viewVertical1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>



        <TextView
            android:id="@+id/userModelName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/teal_700"
            android:textStyle="bold"
            android:textSize="19sp"
            android:layout_margin="3dp"
            app:layout_constraintStart_toEndOf="@+id/viewVertical1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/userModelEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/teal_700"
            android:textSize="16sp"
            android:layout_margin="3dp"
            app:layout_constraintStart_toEndOf="@+id/viewVertical1"
            app:layout_constraintTop_toBottomOf="@+id/userModelName" />
        <TextView
            android:id="@+id/userModelPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ph No"
            android:textColor="@color/teal_700"
            android:textSize="16sp"
            android:layout_margin="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/viewVertical1"
            app:layout_constraintTop_toBottomOf="@+id/userModelEmail" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>